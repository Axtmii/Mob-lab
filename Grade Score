MainActivity.java

package com.example.internal1;

import android.content.Intent;
import android.content.SharedPreferences;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Toast;

import androidx.appcompat.app.AppCompatActivity;

public class MainActivity extends AppCompatActivity {

    EditText e1, e2, e3;
    Button b1, b2;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main); // connects this Java file to the above XML layout

        // link the variables to UI elements
        e1 = findViewById(R.id.editText1);  // name
        e2 = findViewById(R.id.editText2);  // internal
        e3 = findViewById(R.id.editText3);  // external
        b1 = findViewById(R.id.button1);    // save
        b2 = findViewById(R.id.button2);    // view

        // when "Save Marks" button clicked
        b1.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                String name = e1.getText().toString();

                if (name.isEmpty()) {
                    Toast.makeText(MainActivity.this, "Provide a name", Toast.LENGTH_SHORT).show();
                } else {
                    int internal = Integer.parseInt(e2.getText().toString());
                    int external = Integer.parseInt(e3.getText().toString());
                    int total = internal + external;

                    // store data in SharedPreferences
                    SharedPreferences sp = getSharedPreferences("Myprefs", MODE_PRIVATE);
                    SharedPreferences.Editor editor = sp.edit();
                    editor.putInt(name, total); // key = name, value = total marks
                    editor.apply();

                    Toast.makeText(MainActivity.this, "Marks Saved Successfully!", Toast.LENGTH_SHORT).show();
                }
            }
        });

        // when "View Marks" button clicked
        b2.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Intent i = new Intent(MainActivity.this, MainActivity2.class);
                startActivity(i);
            }
        });
    }
}




activity_main.xml

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
